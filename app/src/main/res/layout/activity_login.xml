<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#EF4836"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project.kiran.zync.login">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/logo2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:src="@drawable/name"
        android:layout_below="@+id/logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@+id/txtHint"
        android:id="@+id/whitespace2"
        android:layout_height="20sp"></LinearLayout>
    <TextView
        android:text="Never Loose your contacts ever again !"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="10sp"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/name"
        android:textColor="#FFFFFF"
        android:id="@+id/txtHint" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@+id/txtHint"
        android:id="@+id/whitespace"
        android:layout_height="15sp"></LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/whitespace"
        android:layout_alignLeft="@id/name"
        android:layout_alignStart="@id/name"
        android:gravity="center"
        android:layout_marginTop="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp">
        <WebView
            android:layout_width="64sp"
            android:layout_height="64sp"
            android:padding="10sp"
            android:layout_gravity="center"
            android:id="@+id/loader"></WebView>
        <ImageView
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:src="@drawable/signin"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
